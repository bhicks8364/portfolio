<div class='col-md-12 dark'>
  <p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<%= link_to(about_path, class: 'thumbnail') do %>
      <%= image_tag("#{@product.img_url}") %>
    <% end %>


<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Qty:</strong>
  <%= @product.qty %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

</div>