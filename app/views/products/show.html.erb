<div class='col-md-12 dark'>
<div class='col-md-6 dark'>
  <p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Qty:</strong>
  <%= @product.qty %>
</p>
</div>


<div class='col-md-6'>
  <%= link_to(about_path, class: 'thumbnail') do %>
      <%= image_tag("#{@product.img_url}") %>
    <% end %>
</div>




<div class='pull-right'>
  <%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>

</div>