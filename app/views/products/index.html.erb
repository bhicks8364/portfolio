<div id='' class='col-md-12 dark'>
  <p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class='table table-bordered darker center'>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Qty</th>
    
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to(product, class: '') do %>
            <%= image_tag("#{product.img_url}", size: "100") %>
          <% end %>
        </td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.qty %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts %>
<br>

<%= link_to 'New Product', new_product_path %>

</div>